{
  "lifecycle": {
    "rule": [
      {
        "action": {
          "type": "SetStorageClass",
          "storageClass": "NEARLINE"
        },
        "condition": {
          "age": 90,
          "matchesPrefix": ["raw/", "intermediate/"]
        },
        "description": "Move raw and intermediate data to Nearline storage after 90 days"
      },
      {
        "action": {
          "type": "Delete"
        },
        "condition": {
          "age": 365,
          "matchesPrefix": ["logs/"]
        },
        "description": "Delete log files after 1 year"
      },
      {
        "action": {
          "type": "SetStorageClass",
          "storageClass": "COLDLINE"
        },
        "condition": {
          "age": 180,
          "matchesPrefix": ["processed/chunks/"]
        },
        "description": "Move old chunks to Coldline storage after 180 days"
      }
    ]
  }
}
